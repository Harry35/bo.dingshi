{% extends "layout.twig" %}

{% block content %}
<a href="{{ base_url() }}"><span class="glyphicon glyphicon-arrow-left"></span> 返回</a>
<div class="container">
    <fieldset>
        <a href="{{ base_url() }}resto/{{ restoId }}/food/add" type="button" class="btn btn-success" style="margin-bottom: 10px">创建新菜</a>
        <div class="panel panel-default">
        <table class="table table-hover">
            <div class="panel-heading"><strong>菜列表</strong></div>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>菜名</th>
                    <th>价格</th>
                    <th>图片</th>
                    <th>操作</th>
                </tr>
            </thead>
            {% for food in foods %}
                <tr>
                    <td>{{ food.id }}</td>
                    <td><a title="更改特色菜信息" href="{{ base_url() }}resto/{{ restoId }}/food/{{ food.id }}/edit">{{ food.name }}</a></td>
                    <td>{{ food.price }}</td>
                    <td><img src="{{ food.pic }}"></td>
                    <td>
                        <a class="tooltipbox" title="更改" href="{{ base_url() }}resto/{{ restoId }}/food/{{ food.id }}/edit"><span class="glyphicon glyphicon-edit"></span></a>
                        <a data-toggle="modal" data-target="#confirmSupp" class="deleteSur tooltipbox" title="删除" href="#" data-id="{{ food.id }}" ><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        </div>
    </fieldset>
</div>

<div style="display:none" class="modal" id="confirmSupp" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">确认删除</h4>
            </div>
            <div class="modal-body">
               确认删除该特色菜吗？
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">取消</button>
                <button id="deleteConfirm" type="button" data-dismiss="modal" class="btn btn-primary btn-sm">确认</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
